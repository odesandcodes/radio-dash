---
// RADIO-BOSS: PRODUCTION READY
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Radio-Boss</title>
    <style>
        :root { --bg: #f8fafc; --card: #ffffff; --accent: #2563eb; --text-main: #0f172a; --text-muted: #64748b; --border: #e2e8f0; }
        body { font-family: -apple-system, system-ui, sans-serif; background: var(--bg); color: var(--text-main); margin: 0; padding: 20px; display: flex; flex-direction: column; align-items: center; }
        .container { width: 100%; max-width: 500px; }
        h1 { font-size: 1rem; font-weight: 900; text-align: center; color: var(--text-muted); margin: 20px 0 40px 0; letter-spacing: 0.2em; }

        .card { 
            background: var(--card); border: 1px solid var(--border); border-radius: 24px; 
            padding: 30px; margin-bottom: 16px; position: relative; cursor: pointer; 
            transition: all 0.2s ease; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
            -webkit-tap-highlight-color: transparent; overflow: hidden;
        }
        
        .card.playing { border-color: var(--accent); border-width: 2px; transform: scale(1.02); }

        .label { font-size: 0.7rem; font-weight: 800; color: var(--accent); text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: 12px; }
        .title { font-size: 1.1rem; font-weight: 800; margin-bottom: 4px; line-height: 1.3; padding-right: 40px; }
        .comp { font-size: 0.9rem; color: var(--text-muted); font-weight: 500; }

        .viz { display: flex; gap: 3px; height: 20px; position: absolute; bottom: 30px; right: 30px; align-items: flex-end; opacity: 0; }
        .playing .viz { opacity: 1; }
        .bar { width: 3px; background: var(--accent); border-radius: 1px; height: 4px; }
        
        .playing .bar { animation: bounce 0.6s infinite ease-in-out; }
        .playing .bar:nth-child(2) { animation-delay: 0.15s; }
        .playing .bar:nth-child(3) { animation-delay: 0.3s; }

        @keyframes bounce { 0%, 100% { height: 4px; } 50% { height: 20px; } }
    </style>
</head>
<body>
    <div class="container">
        <h1>RADIO-BOSS</h1>
        <div id="ui">
            {['wqxr', 'wfmt', 'kusc', 'kdfc'].map((id) => (
                <div class="card" id={`card-${id}`} onclick={`toggleStation('${id}')`}>
                    <div class="label">{id.toUpperCase()} â€¢ {id === 'wqxr' ? 'New York' : id === 'wfmt' ? 'Chicago' : id === 'kusc' ? 'Los Angeles' : 'San Francisco'}</div>
                    <div id={`${id}-t`} class="title">Live Broadcast</div>
                    <div id={`${id}-c`} class="comp">Connecting...</div>
                    <div class="viz"><div class="bar"></div><div class="bar"></div><div class="bar"></div></div>
                </div>
            ))}
        </div>
    </div>

    <audio id="global-player" preload="none"></audio>

    <script is:inline>
        const player = document.getElementById('global-player');
        const streams = {
            wqxr: 'https://stream.wqxr.org/wqxr.mp3',
            wfmt: 'https://wfmt.streamtheworld.com/WFMT.mp3',
            kusc: 'https://kuscstream.org/mp3-128',
            kdfc: 'https://kdfcstream.org/mp3-128'
        };
        let currentId = null;

        function toggleStation(id) {
            const card = document.getElementById(`card-${id}`);
            const allCards = document.querySelectorAll('.card');

            if (currentId === id && !player.paused) {
                player.pause();
                player.src = "";
                card.classList.remove('playing');
                currentId = null;
            } else {
                allCards.forEach(c => c.classList.remove('playing'));
                
                // Audio Reset Logic
                player.pause();
                player.src = streams[id];
                player.load(); 
                
                player.play().then(() => {
                    card.classList.add('playing');
                    currentId = id;
                }).catch(e => console.error("Playback Error:", e));
            }
        }

        async function sync() {
            try {
                const r = await fetch('/api/stations.json?t=' + Date.now());
                const d = await r.json();
                
                ['wqxr','wfmt','kusc','kdfc'].forEach(s => {
                    const tEl = document.getElementById(s+'-t');
                    const cEl = document.getElementById(s+'-c');
                    // Only update if the data actually changed from our default
                    if(d[s] && d[s].title) {
                        tEl.innerText = d[s].title;
                        cEl.innerText = d[s].comp;
                    }
                });
            } catch (e) { console.error("Metadata Sync error", e); }
        }
        
        sync();
        setInterval(sync, 30000);
    </script>
</body>
</html>