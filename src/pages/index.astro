---
// RADIO-BOSS V2: THE CLASSICAL FOUR
---
<html lang="en">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Radio-Boss</title>
    <style>
        :root { --bg: #020617; --card: #0f172a; --accent: #3b82f6; --text: #f8fafc; }
        body { font-family: -apple-system, system-ui, sans-serif; background: var(--bg); color: var(--text); margin: 0; padding: 20px; display: flex; flex-direction: column; align-items: center; }
        .container { width: 100%; max-width: 500px; }
        h1 { font-size: 1.5rem; font-weight: 900; text-align: center; color: #64748b; margin-bottom: 30px; }

        .card { background: var(--card); border: 1px solid #1e293b; border-radius: 24px; padding: 25px; margin-bottom: 16px; position: relative; cursor: pointer; -webkit-tap-highlight-color: transparent; }
        .card.playing { border-color: var(--accent); box-shadow: 0 0 20px rgba(59, 130, 246, 0.1); }

        .label { font-size: 0.7rem; font-weight: 800; color: #475569; text-transform: uppercase; letter-spacing: 0.1em; margin-bottom: 8px; }
        .title { font-size: 1.2rem; font-weight: 800; margin-bottom: 4px; }
        .comp { font-size: 0.9rem; color: #94a3b8; }

        /* VIRTUAL VISUALIZER */
        .viz { display: flex; gap: 3px; height: 15px; position: absolute; bottom: 25px; right: 25px; opacity: 0; }
        .playing .viz { opacity: 1; }
        .bar { width: 3px; background: var(--accent); animation: bounce 1s infinite; }
        @keyframes bounce { 0%, 100% { height: 4px; } 50% { height: 15px; } }
    </style>
</head>
<body>
    <div class="container">
        <h1>RADIO-BOSS</h1>
        
        <div id="ui">
            <div class="card" onclick="play('wqxr', 'https://stream.wqxr.org/wqxr')">
                <div class="label">WQXR • New York</div>
                <div id="wqxr-t" class="title">...</div>
                <div id="wqxr-c" class="comp">...</div>
                <div class="viz"><div class="bar"></div><div class="bar" style="animation-delay:0.2s"></div><div class="bar" style="animation-delay:0.4s"></div></div>
            </div>

            <div class="card" onclick="play('wfmt', 'https://wfmt.streamtheworld.com/WFMT.mp3')">
                <div class="label">WFMT • Chicago</div>
                <div id="wfmt-t" class="title">...</div>
                <div id="wfmt-c" class="comp">...</div>
                <div class="viz"><div class="bar"></div><div class="bar" style="animation-delay:0.2s"></div><div class="bar" style="animation-delay:0.4s"></div></div>
            </div>

            <div class="card" onclick="play('kusc', 'https://128.mp3.kusc.live')">
                <div class="label">KUSC • Los Angeles</div>
                <div id="kusc-t" class="title">...</div>
                <div id="kusc-c" class="comp">...</div>
                <div class="viz"><div class="bar"></div><div class="bar" style="animation-delay:0.2s"></div><div class="bar" style="animation-delay:0.4s"></div></div>
            </div>

            <div class="card" onclick="play('kdfc', 'https://128.mp3.kdfc.live')">
                <div class="label">KDFC • San Francisco</div>
                <div id="kdfc-t" class="title">...</div>
                <div id="kdfc-c" class="comp">...</div>
                <div class="viz"><div class="bar"></div><div class="bar" style="animation-delay:0.2s"></div><div class="bar" style="animation-delay:0.4s"></div></div>
            </div>
        </div>
    </div>

    <audio id="global-player"></audio>

    <script>
        const player = document.getElementById('global-player');
        let currentId = null;

        function play(id, url) {
            const cards = document.querySelectorAll('.card');
            cards.forEach(c => c.classList.remove('playing'));

            if (currentId === id && !player.paused) {
                player.pause();
                player.src = ""; // Stop data suction immediately
                currentId = null;
            } else {
                player.src = url; // Only pull data when play is pressed
                player.play();
                document.querySelectorAll('.card')[['wqxr','wfmt','kusc','kdfc'].indexOf(id)].classList.add('playing');
                currentId = id;
            }
        }

        async function sync() {
            const r = await fetch('/api/stations.json');
            const d = await r.json();
            ['wqxr','wfmt','kusc','kdfc'].forEach(s => {
                document.getElementById(s+'-t').innerText = d[s].title;
                document.getElementById(s+'-c').innerText = d[s].comp;
            });
        }
        sync(); setInterval(sync, 30000);
    </script>
</body>
</html>