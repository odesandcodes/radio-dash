---
// RADIO-BOSS: THE RELIABLE PIVOT
---
<html lang="en">
<body>
    <div class="container">
        <h1>RADIO-BOSS</h1>
        <div id="ui">
            {['wqxr', 'jonathan', 'mission', 'lush'].map((id) => (
                <div class="card" id={`card-${id}`} onclick={`toggleStation('${id}')`}>
                    <div class="btn-ui">
                        <svg class="play-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                        <svg class="pause-icon" width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/></svg>
                    </div>
                    <div class="info">
                        <div class="label">{id.toUpperCase()} â€¢ {id === 'wqxr' || id === 'jonathan' ? 'New York' : 'SomaFM'}</div>
                        <div id={`${id}-t`} class="title">Live Broadcast</div>
                        <div id={`${id}-c`} class="comp">Connecting...</div>
                        <div class="viz"><div class="bar"></div><div class="bar"></div><div class="bar"></div></div>
                    </div>
                </div>
            ))}
        </div>
    </div>

    <audio id="global-player" crossOrigin="anonymous"></audio>

    <script is:inline>
        const player = document.getElementById('global-player');
        
        // These are the "Bulletproof" streams
        const streams = {
            wqxr: 'https://stream.wqxr.org/wqxr.mp3',
            jonathan: 'https://stream.thejonathanchannel.org/jonathan.mp3',
            mission: 'https://ice1.somafm.com/missioncontrol-128-mp3',
            lush: 'https://ice1.somafm.com/lush-128-mp3'
        };
        
        let currentId = null;

        async function toggleStation(id) {
            const card = document.getElementById(`card-${id}`);
            const allCards = document.querySelectorAll('.card');

            if (currentId === id && !player.paused) {
                player.pause();
                card.classList.remove('playing');
                return;
            }

            allCards.forEach(c => c.classList.remove('playing'));
            currentId = id;
            player.pause();
            player.src = streams[id];
            player.load();

            try {
                await player.play();
                card.classList.add('playing');
            } catch (e) {
                console.error("Playback failed:", e);
            }
        }

        async function sync() {
            try {
                const r = await fetch('/api/stations.json?t=' + Date.now());
                const d = await r.json();
                ['wqxr','jonathan','mission','lush'].forEach(s => {
                    if(d[s]) {
                        document.getElementById(s+'-t').innerText = d[s].title;
                        document.getElementById(s+'-c').innerText = d[s].comp;
                    }
                });
            } catch (e) {}
        }
        sync(); setInterval(sync, 30000);
    </script>
</body>
</html>